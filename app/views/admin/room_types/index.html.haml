.row
  .col-md-5.col-md-offset-2
    %h1 Rome Type 
    
    = link_to 'New Room Type', new_admin_room_type_path
    %table.table.table-striped.table-hover
      %thead
        %tr
          %th Room Name
          %th Price
          %th{:colspan => "3"}
            %center Action
      - @room_types.each do |room_type|
        %tbody
          %tr
            %td= room_type.name
            %td= room_type.price
            %td= link_to 'Edit', edit_admin_room_type_path(room_type)
            %td= link_to 'Destroy',admin_room_type_path(room_type), method: :delete, data: { confirm: 'Are you sure?' }
            